# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Nuvemshop API Configuration
STORE_ID=123456
NUVEMSHOP_TOKEN=your_nuvemshop_access_token_here
NUVEMSHOP_API_KEY=your_nuvemshop_api_key_here

# Firebase Configuration
# Note: Firebase credentials are now loaded from serviceAccountKey.json
# Make sure to place your Firebase service account key file in the backend root directory
# The file should be named: serviceAccountKey.json

# Server Configuration
PORT=4000
NODE_ENV=development

# Cache Configuration (in minutes)
CACHE_DURATION=15
